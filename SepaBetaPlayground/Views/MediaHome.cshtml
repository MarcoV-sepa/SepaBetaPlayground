@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.MediaHome>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models
@{
	Layout = "MasterTemplate.cshtml";
}
<div class="container">
    <div class="row mb4">
        <div class="col-lg-5 col-md-5 col-sm-12 col-12">
            <h1>@Model.Value("heading")</h1>
        </div><!-- /col -->
        <div class="col-lg-7 col-md-7 col-sm-12 col-12">
            <p>@Model.Value("introText")</p>
        </div><!-- /col -->        
    </div><!-- /row -->
</div><!-- /container -->
@{
    if (Model.Value<bool>("show"))
    {
<div class="container">
    <div class="row mb4">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
            <h1>@Model.Value("featuredheading")</h1>
            @Model.Value("featuredText")
@{
    var link = Model.Value<Link>("featuredLink");
    if (link != null)
    {
        <p><a href="@link.Url" target="@link.Target">Link to thing</a></p>
    }
}
            
        </div><!-- /col -->        
    </div><!-- /row -->
</div><!-- /container -->        
    }
}

@await Html.PartialAsync("PullMediaReleases")
@Html.GetBlockListHtml(Model, "Boxes")